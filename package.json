{
  "name": "margin-pro",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "bun --bun vite",
    "build": "bun run build:client && (test -z \"$VERCEL\" && bun run build:server || echo 'Skipping server build on Vercel')",
    "build:client": "vite build",
    "build:server": "tsdown src/server/index.ts --format esm --out-dir dist/server --clean --platform node",
    "lint": "eslint .",
    "validate": "bun run lint && bun x tsc --noEmit && bun run build",
    "test": "npx playwright test",
    "preview": "NODE_ENV=production bun dist/server/index.mjs"
  },
